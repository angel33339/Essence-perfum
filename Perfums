let carrito = 0;

function agregarAlCarrito(nombre, precio) {
    carrito++;
    document.getElementById('cart').innerText = `üõí Carrito (${carrito})`;
    alert(`${nombre} agregado al carrito por $${precio}`);
}

function girarRuleta() {
    let ultimoIntento = localStorage.getItem('ultimaTirada');
    let hoy = new Date().toDateString();

    if (ultimoIntento === hoy) {
        document.getElementById('resultadoRuleta').innerText = "‚ùå Ya usaste tu tirada hoy. Vuelve ma√±ana.";
        return;
    }

    let probabilidad = Math.random();
    let posibilidadGanar = 0.001; // 0.1% de probabilidad de ganar

    if (probabilidad < posibilidadGanar) {
        document.getElementById('resultadoRuleta').innerText = "üéâ ¬°Felicidades! Has ganado. Elige todos los perfumes que quieras gratis. üõçÔ∏è";
    } else {
        document.getElementById('resultadoRuleta').innerText = "üò¢ No ganaste esta vez. Int√©ntalo ma√±ana.";
    }

    localStorage.setItem('ultimaTirada', hoy);
}
